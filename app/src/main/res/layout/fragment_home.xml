<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteOri"
    android:backgroundTintMode="src_atop"
    android:backgroundTint="@color/whiteOri"
    tools:context=".home.HomeAdminFragment">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:background="@color/lightBlue"/>
         <!-- TODO: Update blank fragment layout -->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:cardBackgroundColor="@color/whiteOri"
                 android:backgroundTintMode="src_atop"
                 app:cardUseCompatPadding="true"
                 app:cardElevation="15dp"
                 app:cardCornerRadius="10dp"
                 android:layout_centerHorizontal="true"
                 android:innerRadius="0dp"
                 android:shape="ring"
                 android:thicknessRatio="1.9">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:padding="10dp"
                     android:divider="?android:dividerHorizontal"
                     android:showDividers="middle"
                     android:orientation="vertical">
                     <LinearLayout
                         android:id="@+id/userInfo"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">
                         <LinearLayout
                             android:layout_width="250dp"
                             android:layout_height="wrap_content"
                             android:layout_marginVertical="10dp"
                             android:orientation="vertical"
                             >
                             <TextView
                                 android:id="@+id/nama"
                                 android:layout_width="match_parent"
                                 android:layout_height="20dp"
                                 android:text="Pradhipta Bagaskara"
                                 android:fontFamily="@font/worksans_bold"
                                 android:layout_marginBottom="1dp"
                                 android:textColor="@color/darkBlue"/>

                             <TextView
                                 android:id="@+id/username"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="pradhipta123"
                                 android:fontFamily="@font/worksans_light"
                                 />
                         </LinearLayout>
                         <ImageButton
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_arrow"
                             android:backgroundTint="@color/transparant"
                             android:layout_alignParentRight="true"
                             android:layout_gravity="center_vertical"/>


                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">
                         <LinearLayout
                             android:layout_width="250dp"
                             android:layout_height="wrap_content"
                             android:layout_marginVertical="10dp"
                             android:orientation="vertical"
                             >
                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="20dp"
                                 android:text="SALDO KHAS"
                                 android:fontFamily="@font/worksans_bold"
                                 android:layout_marginBottom="1dp"
                                 android:textColor="@color/darkBlue"/>

                             <com.congfandi.lib.TextViewRupiah
                                 android:id="@+id/saldo"
                                 android:layout_marginTop="3dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="0"
                                 android:fontFamily="@font/worksans_bold"
                                 />
                         </LinearLayout>
                         <ImageButton
                             android:id="@+id/refreshSaldo"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_refresh"
                             android:backgroundTint="@color/transparant"
                             android:layout_gravity="center_vertical"/>
                     </LinearLayout>

                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <com.bcc.gridmenuview.GridMenu
                 android:id="@+id/menu_grid"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginHorizontal="10dp"
                 android:padding="5dp"
                 app:spanCount="4"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginTop="20dp"
                 android:layout_marginBottom="15dp"
                 android:paddingHorizontal="20dp"
                 android:divider="?android:dividerHorizontal"
                 android:showDividers="middle">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/worksans_bold"
                     android:textSize="15sp"
                     android:layout_marginBottom="10dp"
                     android:text="Transaksi Terakhir "/>

                 <androidx.recyclerview.widget.RecyclerView
                     android:id="@+id/home_rec"
                     android:layout_width="match_parent"
                     android:layout_marginTop="10dp"
                     android:layout_height="match_parent"
                     android:background="@color/transparant"
                     />

             </LinearLayout>


         </LinearLayout>

     </RelativeLayout>



</FrameLayout>