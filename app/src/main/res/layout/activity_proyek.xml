<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".proyek.ProyekActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:background="@color/lightBlue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparant"
                android:src="@drawable/ic_back"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="DETAIL PROYEK"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_bold"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/modern_city"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->
<!--            edit-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/whiteOri"
                    android:backgroundTintMode="src_atop"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="10dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">
<!--                    edit-->
                    <LinearLayout
                        android:id="@+id/showEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:divider="?android:dividerHorizontal"
                        android:showDividers="middle"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="NAMA PROYEK"
                                    android:fontFamily="@font/worksans_bold"
                                    android:layout_marginBottom="1dp"
                                    android:textColor="@color/darkBlue"/>

                                <EditText
                                    android:id="@+id/editnamaProyek"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/worksans_regular"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="CATATAN"
                                    android:fontFamily="@font/worksans_bold"
                                    android:layout_marginBottom="1dp"
                                    android:textColor="@color/darkBlue"/>

                                <EditText
                                    android:id="@+id/editcatatan"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/worksans_regular"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="MODAL"
                                    android:fontFamily="@font/worksans_bold"
                                    android:layout_marginBottom="1dp"
                                    android:textColor="@color/darkBlue"/>

                                <com.congfandi.lib.EditTextRupiah
                                    android:id="@+id/editmodal"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/worksans_regular"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linierBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <ImageButton
                                android:id="@+id/cancelBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_cancel"
                                android:layout_gravity="end"

                                android:layout_marginHorizontal="15dp"
                                android:backgroundTint="@color/transparant"/>
                            <ImageButton
                                android:id="@+id/simpanBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_save"
                                android:layout_gravity="end"
                                android:backgroundTint="@color/transparant"/>
                        </LinearLayout>



                        <ProgressBar
                            android:id="@+id/progres"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="20dp" />



                    </LinearLayout>
<!--                    end edit-->
<!--                    show-->
                    <LinearLayout
                        android:id="@+id/show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:divider="?android:dividerHorizontal"
                        android:showDividers="middle"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="NAMA PROYEK"
                                    android:fontFamily="@font/worksans_bold"
                                    android:layout_marginBottom="1dp"
                                    android:textColor="@color/darkBlue"/>

                                <TextView
                                    android:id="@+id/namaProyek"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/worksans_bold"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="CATATAN"
                                    android:fontFamily="@font/worksans_bold"
                                    android:layout_marginBottom="1dp"
                                    android:textColor="@color/darkBlue"/>

                                <TextView
                                    android:id="@+id/catatan"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/worksans_bold"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="MODAL"
                                    android:fontFamily="@font/worksans_bold"
                                    android:layout_marginBottom="1dp"
                                    android:textColor="@color/darkBlue"/>

                                <com.congfandi.lib.TextViewRupiah
                                    android:id="@+id/modal"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/worksans_bold"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="TOTAL PENGELUARAN"
                                    android:fontFamily="@font/worksans_bold"
                                    android:layout_marginBottom="1dp"
                                    android:textColor="@color/darkBlue"/>

                                <com.congfandi.lib.TextViewRupiah
                                    android:id="@+id/totalPengeluaran"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/worksans_bold"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="SISA MODAL"
                                    android:fontFamily="@font/worksans_bold"
                                    android:layout_marginBottom="1dp"
                                    android:textColor="@color/darkBlue"/>

                                <com.congfandi.lib.TextViewRupiah
                                    android:id="@+id/sisaModal"
                                    android:layout_marginTop="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/worksans_bold"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/deleteBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_delete"
                                android:layout_gravity="end"

                                android:layout_marginHorizontal="15dp"
                                android:backgroundTint="@color/transparant"/>
                            <ImageButton
                                android:id="@+id/editBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:src="@drawable/ic_edit"
                                android:layout_gravity="right"
                                android:backgroundTint="@color/transparant"/>
                        </LinearLayout>




                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:paddingHorizontal="20dp"
                    android:divider="?android:dividerHorizontal"
                    android:showDividers="middle">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_bold"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:text="Aktifitas Proyek "/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/proyek_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparant"
                            />
                        <TextView
                            android:id="@+id/noneAktifitas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Belum Ada Aktifitas"/>
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>





</androidx.coordinatorlayout.widget.CoordinatorLayout>